<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="using:SAMP_Launcher.Models"
		xmlns:fa="http://schemas.fontawesome.io/icons/"
		x:DataType="model:MainWindowModel"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="SAMP_Launcher.MainWindow"
		TransparencyLevelHint="AcrylicBlur"
		ExtendClientAreaChromeHints="Default"
		ExtendClientAreaToDecorationsHint="True"
		WindowStartupLocation="CenterScreen"
		Title="{Binding APP_TITLE}"
		Icon="avares://SAMP Launcher/Assets/samp.ico"
        Background="Transparent">
	<Grid Name="mainWindowGrid">
		<Grid.RowDefinitions>
			<RowDefinition Height="32"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Panel Name="acrylBackground" Grid.RowSpan="2">
			<ExperimentalAcrylicBorder IsHitTestVisible="False">
				<ExperimentalAcrylicBorder.Material>
					<ExperimentalAcrylicMaterial
						BackgroundSource="Digger"
						TintColor="Black"
						TintOpacity="1"
						MaterialOpacity="0" />
				</ExperimentalAcrylicBorder.Material>
			</ExperimentalAcrylicBorder>
		</Panel>
		<Grid Name="customTitleBar">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="32"/>
				<ColumnDefinition/>
				<ColumnDefinition Width="150"/>
			</Grid.ColumnDefinitions>
			<Image Grid.Column="0" Margin="7" Source="avares://SAMP Launcher/Assets/samp.ico"/>
			<TextBlock Text="{Binding APP_TITLE}" Grid.Column="1" FontSize="12" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
		</Grid>
		<Grid Grid.Row="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="18"/>
				<RowDefinition Height="3"/>
				<RowDefinition Height="32"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Menu Padding="3">
				<MenuItem Cursor="Hand" FontSize="12">
					<MenuItem.Header>
						<TextBlock Text="File" TextTrimming="CharacterEllipsis"/>
					</MenuItem.Header>
					<MenuItem Cursor="Hand" FontSize="12">
						<MenuItem.Header>
							<TextBlock Text="Import Favorite List" TextTrimming="CharacterEllipsis"/>
						</MenuItem.Header>
					</MenuItem>
					<MenuItem Cursor="Hand" FontSize="12">
						<MenuItem.Header>
							<TextBlock Text="Export Favorite List" TextTrimming="CharacterEllipsis"/>
						</MenuItem.Header>
					</MenuItem>
					<Separator/>
					<MenuItem Cursor="Hand" FontSize="12">
						<MenuItem.Header>
							<TextBlock Text="Exit" TextTrimming="CharacterEllipsis"/>
						</MenuItem.Header>
					</MenuItem>
				</MenuItem>
				<MenuItem Cursor="Hand" FontSize="12">
					<MenuItem.Header>
						<TextBlock Text="View" TextTrimming="CharacterEllipsis"/>
					</MenuItem.Header>
					<CheckBox Cursor="Hand" FontSize="12">
						<CheckBox.Content>
							<TextBlock Text="Filter / Server Info" TextTrimming="CharacterEllipsis"/>
						</CheckBox.Content>
					</CheckBox>
					<Separator/>
					<CheckBox Cursor="Hand" FontSize="12">
						<CheckBox.Content>
							<TextBlock Text="Status Bar" TextTrimming="CharacterEllipsis"/>
						</CheckBox.Content>
					</CheckBox>
				</MenuItem>
				<MenuItem Cursor="Hand" FontSize="12">
					<MenuItem.Header>
						<TextBlock Text="Servers" TextTrimming="CharacterEllipsis"/>
					</MenuItem.Header>
					<MenuItem Cursor="Hand" FontSize="12">
						<MenuItem.Header>
							<TextBlock Text="Connect" TextTrimming="CharacterEllipsis"/>
						</MenuItem.Header>
					</MenuItem>
					<Separator/>
					<MenuItem Cursor="Hand" FontSize="12">
						<MenuItem.Header>
							<TextBlock Text="Add Server" TextTrimming="CharacterEllipsis"/>
						</MenuItem.Header>
					</MenuItem>
					<MenuItem Cursor="Hand" FontSize="12">
						<MenuItem.Header>
							<TextBlock Text="Delete Server" TextTrimming="CharacterEllipsis"/>
						</MenuItem.Header>
					</MenuItem>
					<MenuItem Cursor="Hand" FontSize="12">
						<MenuItem.Header>
							<TextBlock Text="Refresh Server" TextTrimming="CharacterEllipsis"/>
						</MenuItem.Header>
					</MenuItem>
					<Separator/>
					<MenuItem Cursor="Hand" FontSize="12">
						<MenuItem.Header>
							<TextBlock Text="Copy Server Info" TextTrimming="CharacterEllipsis"/>
						</MenuItem.Header>
					</MenuItem>
					<MenuItem Cursor="Hand" FontSize="12">
						<MenuItem.Header>
							<TextBlock Text="Server Properties" TextTrimming="CharacterEllipsis"/>
						</MenuItem.Header>
					</MenuItem>
				</MenuItem>
				<MenuItem Cursor="Hand" FontSize="12">
					<MenuItem.Header>
						<TextBlock Text="Tools" TextTrimming="CharacterEllipsis"/>
					</MenuItem.Header>
					<MenuItem Cursor="Hand" FontSize="12">
						<MenuItem.Header>
							<TextBlock Text="Settings" TextTrimming="CharacterEllipsis"/>
						</MenuItem.Header>
					</MenuItem>
				</MenuItem>
				<MenuItem Cursor="Hand" FontSize="12">
					<MenuItem.Header>
						<TextBlock Text="Help" TextTrimming="CharacterEllipsis"/>
					</MenuItem.Header>
					<MenuItem Cursor="Hand" FontSize="12">
						<MenuItem.Header>
							<TextBlock Text="Help Topics" TextTrimming="CharacterEllipsis"/>
						</MenuItem.Header>
					</MenuItem>
					<Separator/>
					<MenuItem Cursor="Hand" FontSize="12">
						<MenuItem.Header>
							<TextBlock Text="SA-MP.com" TextTrimming="CharacterEllipsis"/>
						</MenuItem.Header>
					</MenuItem>
					<Separator/>
					<MenuItem Cursor="Hand" FontSize="12">
						<MenuItem.Header>
							<TextBlock Text="About" TextTrimming="CharacterEllipsis"/>
						</MenuItem.Header>
					</MenuItem>
				</MenuItem>
			</Menu>
			<Separator Grid.Row="1"/>
			<Grid Grid.Row="2" Margin="0,2,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="auto"/>
					<ColumnDefinition/>
					<ColumnDefinition Width="auto"/>
				</Grid.ColumnDefinitions>
				<WrapPanel Margin="8,0,0,0">
					<Button Margin="5,0,0,0" Content=">">
					</Button>
					<Rectangle Margin="5,0,0,0" Width="1" Height="25" Fill="White"/>
					<Button Margin="5,0,0,0" Content="A"/>
					<Button Margin="5,0,0,0" Content="R"/>
					<Button Margin="5,0,0,0" Content="F"/>
					<Rectangle Margin="5,0,0,0" Width="1" Height="25" Fill="White"/>
					<Button Margin="5,0,0,0" Content="I"/>
					<Button Margin="5,0,0,0" Content="P"/>
					<Rectangle Margin="5,0,0,0" Width="1" Height="25" Fill="White"/>
					<Button Margin="5,0,0,0" Content="S"/>
					<Rectangle Margin="5,0,0,0" Width="1" Height="25" Fill="White"/>
					<Button Margin="5,0,0,0" Content="H"/>
					<Button Margin="5,0,0,0" Content="A"/>
					<Rectangle Margin="5,0,0,0" Width="1" Height="25" Fill="White"/>
				</WrapPanel>
				<TextBox MinWidth="1" Grid.Column="1" Margin="5,0,0,0" Watermark="Enter nickname:" MaxLength="24"/>
				<WrapPanel Grid.Column="2" Margin="0,0,10,0">
					<Rectangle Margin="5,0,5,0" Width="1" Height="25" Fill="White"/>
					<Button Content="SAMP"/>
				</WrapPanel>
			</Grid>
		</Grid>
	</Grid>
</Window>
